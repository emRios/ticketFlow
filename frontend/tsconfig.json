{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@ticketflow/domain-core": ["packages/domain-core"],
      "@ticketflow/domain-core/*": ["packages/domain-core/*"],
      "@ticketflow/board-core": ["packages/board-core"],
      "@ticketflow/board-core/*": ["packages/board-core/*"],
      "@ticketflow/board-adapter-vanilla": ["packages/board-adapter-vanilla"],
      "@ticketflow/board-adapter-vanilla/*": ["packages/board-adapter-vanilla/*"]
    }
  },
  "include": ["packages", "apps"]
}